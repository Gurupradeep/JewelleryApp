<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    tools:context="com.example.gurupradeep.jewelery_app.Chit_funds_managing_chit1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="7/10"
                android:id="@+id/chit_funds_managing_ppl"
                android:layout_alignParentLeft="true"
                android:textSize="40dp"
                android:layout_alignParentStart="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Rs 5,25,000/-"
                android:id="@+id/chit_funds_managing_amount"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Due"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Temporary Chit"
                android:id="@+id/chit_fund_managing_name"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="20th May"
                android:id="@+id/chit_funds_managing_start_date"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Amount(pooled) : 2,50,000/-"
                android:id="@+id/chit_funds_managing_pooled"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="10 chits done"
                android:id="@+id/chit_funds_managing_no_of_chits_done"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Number of Members : 13"
        android:id="@+id/chit_managing_chit1_no_of_members"
        />
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart8"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="200dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="505dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Due Members"
        android:textSize="30dp"
        android:id ="@+id/Due_members_heading"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/chit1_rc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_marginTop="540dp"/>



</RelativeLayout>
</android.support.v4.widget.NestedScrollView>